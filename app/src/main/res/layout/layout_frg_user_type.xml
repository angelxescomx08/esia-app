<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/colorFondo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <TextView
            android:id="@+id/labelEsucela"

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="Escuela Superior de IngenierÃ­a y Arquitectura"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:textSize="17sp"

            android:layout_marginTop="20dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/labelUnidad"

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="Unidad Tecamachalco"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:textSize="20sp"

            app:layout_constraintTop_toBottomOf="@+id/labelEsucela"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/imgEsia"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:src="@drawable/esia"
            android:contentDescription="@null"

            app:layout_constraintTop_toBottomOf="@+id/labelUnidad"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.03"
            />


        <Button
            android:id="@+id/btnAlumnos"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:text="Alumnos"
            android:padding="15dp"
            android:background="@drawable/shape_corners"
            android:textColor="@color/white"

            app:layout_constraintTop_toBottomOf="@+id/imgEsia"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.25"
            />

        <Button
            android:id="@+id/btnDocentes"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:text="Docentes"
            android:padding="15dp"
            android:background="@drawable/shape_corners"
            android:textColor="@color/white"

            app:layout_constraintTop_toBottomOf="@+id/btnAlumnos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.05"
            />

        <Button
            android:id="@+id/btnPosgrado"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:text="Posgrado"
            android:padding="15dp"
            android:background="@drawable/shape_corners"
            android:textColor="@color/white"

            app:layout_constraintTop_toBottomOf="@+id/btnDocentes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.05"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:background="@color/colorFondo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Pagina 2 -->

        <TextView
            android:id="@+id/labelProgramacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="Departamento de Programación"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:padding="8dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            />

        <TextView
            android:id="@+id/labelInfoProgramacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="Jefe de Departamento: Ing. Arq. José Carlos Soberanes Ayala\nHorario de atención: 8:00-13:00 y 15:00-20:00\nDías de atención: Lunes a Jueves\nServicios: Dudas sobre asignación de profesores y salones de clases."
            android:padding="10dp"

            app:layout_constraintTop_toBottomOf="@+id/labelProgramacion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


        <TextView
            android:id="@+id/labelGestionEscolar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="Departamento de Gestión Escolar"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:padding="8dp"

            app:layout_constraintTop_toBottomOf="@+id/labelInfoProgramacion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            />

        <TextView
            android:id="@+id/labelInfoGestionEscolar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="Jefa de Departamento: C. Adiana Valdivia Domíngurez\nHorario de atención: 7:00-14:00 y 16:00-21:00\nDías de atención: Lunes a Jueves\nServicios: Horarios, bajas y altas de materias, boletas, dictamen."
            android:padding="10dp"

            app:layout_constraintTop_toBottomOf="@+id/labelGestionEscolar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/txtVerMasGestionEscolar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="ver más"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:paddingVertical="10dp"
            app:drawableEndCompat="@drawable/ic_double_arrow_right"
            style="@style/ClickableView"

            app:layout_constraintTop_toBottomOf="@+id/labelInfoGestionEscolar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.97"
            />


        <TextView
            android:id="@+id/labelTutorias"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="Tutorías"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:padding="8dp"

            app:layout_constraintTop_toBottomOf="@+id/txtVerMasGestionEscolar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            />

        <TextView
            android:id="@+id/labelInfoTutorias"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="1.Tutoría de Recuperación Académica\n2.Tutoría de Regularización Académica\n3.Tutoría Grupal\n4.Tutoría Individual\n5.Tutoría Especial\nAtención:\nIng. Arq. Juan Hernández Flores\nHorario: 9:00 a 14:00 hrs\nIng. Arq. Ivette Gómez Lugo\nHorario: 16:00 a 19:00 hrs\nDías de atención: Lunes a Jueves\nNota. Acudir al departamento para más información"
            android:padding="10dp"

            app:layout_constraintTop_toBottomOf="@+id/labelTutorias"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/ic_arrow_back"
            android:rotation="180"
            android:contentDescription="@null"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.98"
            app:layout_constraintHorizontal_bias="0.97"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
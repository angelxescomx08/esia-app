<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:background="@color/colorFondo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgEsia"
            android:layout_width="60dp"
            android:layout_height="70dp"

            android:src="@drawable/esia"
            android:contentDescription="@null"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.03"
            app:layout_constraintHorizontal_bias="0.95"
            />

        <TextView
            android:id="@+id/labelEsucela"

            android:layout_width="0dp"
            android:layout_height="0dp"

            android:gravity="bottom|end"
            android:text="Escuela Superior\nde Ingeniería y Arquitectura"
            android:textColor="@color/colorText"
            android:textSize="12sp"

            android:textStyle="bold"

            app:layout_constraintBottom_toTopOf="@+id/labelUnidad"
            app:layout_constraintEnd_toStartOf="@+id/imgEsia"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgEsia" />

        <TextView
            android:id="@+id/labelUnidad"

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="Unidad Tecamachalco"
            android:gravity="bottom|end"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:textSize="18sp"

            app:layout_constraintTop_toBottomOf="@+id/labelEsucela"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/labelEsucela"
            app:layout_constraintBottom_toBottomOf="@+id/imgEsia"
            />

        <!-- Título -->

        <TextView
            android:id="@+id/labelTitulo1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:text="Conócenos"
            android:gravity="center"
            android:padding="12dp"

            app:layout_constraintTop_toBottomOf="@+id/labelUnidad"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.03"
            />

        <!-- Pagina 1 -->

        <TextView
            android:id="@+id/labelFormacionBasica"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="Coordinador del Programa de Maestría en Ciencias en Arquitectura y Urbanismo"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:padding="8dp"

            app:layout_constraintTop_toBottomOf="@+id/labelTitulo1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            />

        <TextView
            android:id="@+id/labelTituloNegritas1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="Dr. J. Guadalupe Martínez Granados"
            android:padding="10dp"
            android:textStyle="bold|italic"
            android:textColor="@color/black"

            app:layout_constraintTop_toBottomOf="@+id/labelFormacionBasica"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/labelInfoFormacionBasica"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="Correo: jogugra@hotmail.com\nTeléfono: 5729 6000      Ext: 68020"
            android:paddingHorizontal="10dp"

            app:layout_constraintTop_toBottomOf="@+id/labelTituloNegritas1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />



        <TextView
            android:id="@+id/labelServiciosEstudiantiles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="Coordinador del Programa de Maestría en Conservación y Restauración Arquitectónica"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:padding="8dp"
            android:layout_marginTop="20dp"

            app:layout_constraintTop_toBottomOf="@+id/labelInfoFormacionBasica"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            />

        <TextView
            android:id="@+id/labelTituloNegritas2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="Dr. Tarsicio Pastrana Salcedo"
            android:padding="10dp"
            android:textStyle="bold|italic"
            android:textColor="@color/black"

            app:layout_constraintTop_toBottomOf="@+id/labelServiciosEstudiantiles"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/labelInfoServiciosEstudiantiles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="Correo institucional: taarpaa@msn.com\nTeléfono: 5729 6000      Ext: 68023"
            android:paddingHorizontal="10dp"

            app:layout_constraintTop_toBottomOf="@+id/labelTituloNegritas2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />



        <TextView
            android:id="@+id/labelServiciosEstudiantilesCosaDos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="Coordinador del Programa de Especialidad en Valuación Inmobiliaria"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:padding="8dp"
            android:layout_marginTop="20dp"

            app:layout_constraintTop_toBottomOf="@+id/labelInfoServiciosEstudiantiles"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            />

        <TextView
            android:id="@+id/labelTituloNegritas2CosaDos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="Mtro. Ismael Ramírez Jaimes"
            android:padding="10dp"
            android:textStyle="bold|italic"
            android:textColor="@color/black"

            app:layout_constraintTop_toBottomOf="@+id/labelServiciosEstudiantilesCosaDos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/labelInfoServiciosEstudiantilesCosaDos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="Correo institucional: jramirezj@ipn.mx\nTeléfono: 5729 6000      Ext: 68023"
            android:paddingHorizontal="10dp"

            app:layout_constraintTop_toBottomOf="@+id/labelTituloNegritas2CosaDos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />




        <TextView
            android:id="@+id/labelFormacionIntegralInstitucional"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="Coordinador del Programa de Especialidad en Restauración Arquitectónica"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:padding="8dp"
            android:layout_marginTop="20dp"

            app:layout_constraintTop_toBottomOf="@+id/labelInfoServiciosEstudiantilesCosaDos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            />

        <TextView
            android:id="@+id/labelTituloNegritas3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="Ing. Arq. Alberto Antelmo Peña Guerrero"
            android:padding="10dp"
            android:textStyle="bold|italic"
            android:textColor="@color/black"

            app:layout_constraintTop_toBottomOf="@+id/labelFormacionIntegralInstitucional"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/labelInfoFormacionIntegralInstitucional"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="Teléfono: 5729 6000      Ext: 68023"
            android:paddingHorizontal="10dp"

            app:layout_constraintTop_toBottomOf="@+id/labelTituloNegritas3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>